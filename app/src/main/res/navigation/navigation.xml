<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainMenu">

    <fragment
        android:id="@+id/mainMenu"
        android:name="com.hpceen.tictactoe.MainMenu"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu">
        <action
            android:id="@+id/action_mainMenu_to_game"
            app:destination="@id/game" />
        <action
            android:id="@+id/action_mainMenu_to_connection"
            app:destination="@id/connection" />
    </fragment>

    <fragment
        android:id="@+id/game"
        android:name="com.hpceen.tictactoe.Game"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_game_to_mainMenu"
            app:destination="@id/mainMenu" />
    </fragment>

    <fragment
        android:id="@+id/connection"
        android:name="com.hpceen.tictactoe.Connection"
        android:label="fragment_connection"
        tools:layout="@layout/fragment_connection" />
</navigation>